<Window x:Class="wpf_dogClient_gyakorlo.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_dogClient_gyakorlo"
        mc:Ignorable="d"
        Title="LoginForm" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="173,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username:" HorizontalAlignment="Left" Height="32" Margin="99,19,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="173,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="32" Margin="99,51,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="173,92,0,0" VerticalAlignment="Top" Height="20" Width="120"/>
        <Button x:Name="registrationButton" Content="Registration" HorizontalAlignment="Left" Margin="173,127,0,0" VerticalAlignment="Top" Height="21" Width="120" Click="registrationButton_Click"/>


    </Grid>
</Window>
